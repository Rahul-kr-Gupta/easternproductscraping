entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["geckodriver", "chromium", "chromedriver"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python", "daily_scraper.py"]
deploymentTarget = "scheduled"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "check_status"

[[workflows.workflow]]
name = "check_status"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python check_scraper_status.py"

[workflows.workflow.metadata]
outputType = "console"
